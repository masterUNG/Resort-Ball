<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="appewtc.masterung.resortball.MainActivity"
    android:background="@drawable/bg500">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signin"
            android:id="@+id/button"
            android:layout_weight="1"
            android:onClick="clickSignInMain" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:onClick="clickSignUpMain" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:padding="@dimen/margin"
        android:background="#82ffffff">

        <ImageView
            android:layout_width="@dimen/icon"
            android:layout_height="@dimen/icon"
            android:id="@+id/imageView"
            android:src="@drawable/krik" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:id="@+id/textView6"
            android:textSize="@dimen/h1"
            android:layout_marginTop="@dimen/margin" />

        <EditText
            android:layout_width="@dimen/edit"
            android:layout_height="wrap_content"
            android:id="@+id/editText5"
            android:hint="@string/user"
            android:inputType="text" />

        <EditText
            android:layout_width="@dimen/edit"
            android:layout_height="wrap_content"
            android:id="@+id/editText6"
            android:hint="@string/pass"
            android:inputType="textPassword" />
    </LinearLayout>
</RelativeLayout>
